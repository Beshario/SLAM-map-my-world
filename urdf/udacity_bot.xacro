<?xml version='1.0'?>

<robot name="udacity_bot" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find slam_project)/urdf/udacity_bot.gazebo" />

  <link name="robot_footprint"></link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="chassis" />
  </joint>

  <link name='chassis'>
    <pose>0 0 0.2 0 0 0</pose>

    <inertial>
      <mass value="10.0"/>
      <origin xyz="0.03 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>

    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
	<cylinder length="0.03" radius="0.2"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
     <origin xyz="0 0 0" rpy=" 0 0 0"/> 
      <geometry>
	<cylinder length="0.03" radius="0.2"/>
      </geometry>
    </visual>
    <collision name='back_caster_collision'>
     <origin xyz="-0.2 0 -0.02" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0399"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='back_caster_visual'>
     <origin xyz="-0.2 0 -0.02" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0399"/>
      </geometry>
    </visual>

    <collision name='front_caster_collision'>
     <origin xyz="0.2 0 -0.02" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0399"/>
      </geometry>
      <surface>
        <friction>
          <ode>
            <mu>0</mu>
            <mu2>0</mu2>
            <slip1>1.0</slip1>
            <slip2>1.0</slip2>
          </ode>
        </friction>
      </surface>
    </collision>

    <visual name='front_caster_visual'>
     <origin xyz="0.2 0 -0.02" rpy=" 0 0 0"/>
      <geometry>
        <sphere radius="0.0399"/>
      </geometry>
    </visual>
  </link>

  <link name="right_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
       <geometry>
        <cylinder length="0.025" radius="0.06"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial> 
	<collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
       <geometry>
        <cylinder length="0.025" radius="0.06"/>
      </geometry>
    </collision>

 </link>
  <link name="left_wheel">
    <visual>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
       <geometry>
        <cylinder length="0.025" radius="0.06"/>
      </geometry>
    </visual>
    <inertial>
      <mass value="3"/>
      <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.1" ixy="0" ixz="0"
          iyy="0.1" iyz="0"
          izz="0.1"
      />
    </inertial>
	<collision>
      <origin xyz="0 0 0" rpy="0 1.5707 1.5707"/>
       <geometry>
        <cylinder length="0.025" radius="0.06"/>
      </geometry>
    </collision>
  </link>
 
<joint type="continuous" name="left_wheel_hinge">
    <origin xyz="0 0.226 0" rpy="0 0 0"/>
    <child link="left_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>
<joint type="continuous" name="right_wheel_hinge">
    <origin xyz="0 -0.226 0" rpy="0 0 0"/>
    <child link="right_wheel"/>
    <parent link="chassis"/>
    <axis xyz="0 1 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>


<link name="camera_link">
     <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
       <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.000001" ixy="0" ixz="0"
          iyy="0.000001" iyz="0"
          izz="0.000001"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
       <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>

</link>

  <joint name="camera_joint" type="fixed">
    <origin xyz="0.1 0 0.1" rpy="0 0 0" />
    <parent link="chassis"/>
    <child link="camera_link"/>
  </joint>

<link name="camera_rgbd_frame">
     <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
       <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </visual>

    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.000001" ixy="0" ixz="0"
          iyy="0.000001" iyz="0"
          izz="0.000001"
      />
    </inertial>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
       <geometry>
        <box size=".05 .05 .05"/>
      </geometry>
    </collision>

</link>
  <joint name="rgbd_joint" type="fixed">
    <origin xyz="0.1 0 0.1" rpy="-1.5707 0  -1.5707" />
    <parent link="chassis"/>
    <child link="camera_rgbd_frame"/>
  </joint>

</robot>

